<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/adventure_back2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/adventure_back5" />

            <ImageView
                android:id="@+id/mob"
                android:layout_width="300sp"
                android:layout_height="180sp"
                android:layout_marginLeft="170sp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginTop="0sp"
                android:src="@drawable/mob2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/adventure_poke2"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginTop="150sp"
                android:src="@drawable/pokemon1" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/dialog" />

            <TextView
                android:id="@+id/narr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="5sp"
                android:background="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/pokemon_font"
                android:text="사냥감을 발견했다!"
                android:textSize="8pt" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_list2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>