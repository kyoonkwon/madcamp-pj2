<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/adventure_back2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/adventure_back5" />

            <ImageView
                android:id="@+id/mob"
                android:layout_width="400sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170sp"
                android:layout_marginTop="0sp"
                android:visibility="invisible"
                android:src="@drawable/mob2" />

            <ImageView
                android:id="@+id/adventure_poke2"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginTop="150sp"
                app:srcCompat="@drawable/pokemon1" />

            <TextView
                android:id="@+id/narr"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon_font"
                android:text="사냥감을 발견했다!"
                android:textSize="14pt"
                android:textAlignment="center"
                android:layout_marginTop="350sp"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_list2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>