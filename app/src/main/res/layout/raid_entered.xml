<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/raid_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/raid_back2" />

            <ImageView
                android:id="@+id/boss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="170sp"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220sp"
                android:src="@drawable/boss_3d" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP: 100"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="250sp"
                />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/dialog" />

            <TextView
                android:id="@+id/narr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="5sp"
                android:background="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/pokemon_font"
                android:text="전설의 포켓몬 디아루가가 나타났다!"
                android:textSize="8pt" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_list3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>